<%= provide(:title, "Login") %>

<div class="row">
	<div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-10 offset-1">
		<h1 class="text-center">Login</h1>
		<%= form_for(:session, url: login_path) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email, class: "form-control form-control-sm" %>

			<%= f.label :password %>
			<%= link_to "(forgot password)", new_password_reset_path %>
			<%= f.password_field :password, class: "form-control form-control-sm" %>

			<div class="form-group form-check">
				<%= f.label :remember_me, class: "form-check-label" do %>
					<%= f.check_box :remember_me, class: "form-check-input" %>
					<span>Remember me on this computer</span>
				<% end %>
			</div>

			<%= f.submit "submit", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>