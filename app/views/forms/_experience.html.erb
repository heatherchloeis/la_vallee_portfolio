<%= form_for(@experience) do |f| %>
	<div class="form-group row">
		<div class="col">
			<%= f.text_field :company, placeholder: "Company", class: "form-control form-control-sm" %>
		</div>

		<div class="col">
			<%= f.text_field :location, placeholder: "Location", class: "form-control form-control-sm" %>
		</div>

		<div class="col">
			<%= f.text_field :title, placeholder: "Title", class: "form-control form-control-sm" %>
		</div>

		<div class="col">
			<%= f.text_field :year, placeholder: "Year(s)", class: "form-control form-control-sm" %>
		</div>
	</div>

	<div class="form-group row">
		<div class="col">
			<%= f.text_area :desc, placeholder: "Responsibilities and Duties", class: "form-control form-control-sm", rows: "5" %>
		</div>
	</div>

	<%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>