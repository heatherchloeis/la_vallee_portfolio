<%= form_for(@example, html: { multipart: true }) do |f| %>
		<div class="form-group row">
			<div class="col-auto">
				<%= f.label :category %>
				<%= f.select :category, options_for_category, prompt: "-select one-", class: "form-control form-control-sm" %>
			</div>

			<div class="col">
				<%= f.text_field :title, placeholder: "Title", class: "form-control form-control-sm" %>
			</div>

			<div class="col">
				<%= f.file_field :content %>
			</div>
		</div>

	<%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
	$('#post_picture').bind('change', function() {
		var size_in_megabytes = this.files[0].size / 1024 / 1024;
		if (size_in_megabytes > 5) {
			alert('Maximum file size is 5MB');
		}
	});
</script>